<div class="jumbotron text-center">
    <h1>Blog Posts</h1>
</div>

<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% for (var post of posts){ %>
            <tr>
                <td><%= post.title %></td>
                <td><%= post.date %></td>
                <td><%= post.body %></td>
                <td>
                    <a href="/posts/<%= post.id %>" class="btn btn-sm btn-primary">View</a>
                </td>
            </tr>
        <% } %>
    </tbody>
</table>